<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kalian.bmc.bhabinm.activity.SplashScreen">

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_splash"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/myImageViewText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myImageView"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:layout_centerInParent="true"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/myImageViewText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myImageViewText1"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/app_developed_by"
        android:textColor="#000000" />

</RelativeLayout>
