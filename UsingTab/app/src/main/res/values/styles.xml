<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <!-- inherit from the material theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/OrangecolorPrimaryDefault</item>
        <item name="android:colorPrimaryDark">@color/OrangecolorPrimaryDark</item> 
        <item name="android:colorAccent">@color/OrangecolorAccent</item>
        <item name="android:windowBackground">@color/OrangecolorWindowBackground</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/OrangecolorPrimaryDefault</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LoginTheme" parent="SplashTheme">
        <item name="android:windowBackground">@color/OrangecolorWindowBackground</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/OrangecolorWindowBackground</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppFormTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
         <item name="colorControlNormal">@color/divider</item>
         <item name="colorControlActivated">@color/accent</item>
         <item name="colorControlHighlight">@color/accent</item>
         <item name="android:textColor">@color/primary_text</item>
         <item name="android:textSize">16sp</item>
     </style>



